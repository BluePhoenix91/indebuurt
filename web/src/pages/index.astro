---
import Badge from "../components/Badge.astro";
import SectionHeading from "../components/SectionHeading.astro";
import { neighborhoods } from "../data/neighborhoods/index";
import NeighborhoodLayout from "../layouts/NeighborhoodLayout.astro";

const neighborhoodsList = Object.values(neighborhoods);
---

<NeighborhoodLayout
  title="Buurtkompas - Vind de perfecte hondvriendelijke buurt"
  description="Ontdek hondvriendelijke buurten in BelgiÃ«. Vind de perfecte plek voor jou en je hond met gedetailleerde informatie over voorzieningen, parken en meer."
  canonical="https://buurtkompas.be/"
>
  <section class="hero">
    <div class="hero-wrapper">
      <div class="hero-content">
        <h1 class="text-h1">Vind de perfecte hondvriendelijke buurt</h1>
        <p class="text-body bold mt-sm">
          Ontdek buurten die perfect zijn voor baasjes en hun honden. Met
          gedetailleerde informatie over voorzieningen, parken, dierenartsen en
          meer.
        </p>
      </div>
    </div>
  </section>

  <div class="content-wrapper">
    <div class="content-section">
      <section class="neighborhoods-overview">
        <SectionHeading level={2}>
          Beschikbare buurten ({neighborhoodsList.length})
        </SectionHeading>
        <p class="mt-sm">
          Klik op een buurt om meer te weten te komen over de hondvriendelijke
          voorzieningen en het dagelijkse leven daar.
        </p>

        <div class="neighborhoods-grid">
          {
            neighborhoodsList.map((neighborhood) => (
              <a href={`/buurt/${neighborhood.id}`} class="neighborhood-card">
                <div class="neighborhood-card-content">
                  <h3 class="neighborhood-card-title">{neighborhood.name}</h3>
                  <p class="neighborhood-card-subtitle">
                    {neighborhood.subtitle}
                  </p>
                  <div class="neighborhood-card-meta">
                    <span class="neighborhood-card-meta-item">
                      <i class="fa-regular fa-house" />
                      Postcode {neighborhood.postalCode}
                    </span>
                    <span class="neighborhood-card-meta-item">
                      <i class="fa-regular fa-users" />
                      {neighborhood.inhabitants.toLocaleString("nl-BE")}{" "}
                      inwoners
                    </span>
                  </div>
                  <div class="neighborhood-card-badges">
                    {neighborhood.labels.map((label) => (
                      <Badge variant="outline" icon="fa-regular fa-dog">
                        {label}
                      </Badge>
                    ))}
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>
    </div>
  </div>
</NeighborhoodLayout>

<style>
  @use "../styles/variables" as *;

  .neighborhoods-overview {
    margin-top: $spacing-lg;
  }

  .neighborhoods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: $spacing-lg;
    margin-top: $spacing-lg;

    @media (max-width: $breakpoint-mobile) {
      grid-template-columns: 1fr;
      gap: $spacing-md;
    }
  }

  .neighborhood-card {
    display: flex;
    flex-direction: column;
    background-color: $background-white;
    border: $border-thin solid $calm-grey-200;
    border-radius: $radius-card;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all $transition-normal-ease;
    box-shadow: $shadow-sm;

    &:hover {
      transform: translateY(-4px);
      box-shadow: $shadow-md;
      border-color: $primary;
    }
  }

  .neighborhood-card-content {
    padding: $spacing-md;
    display: flex;
    flex-direction: column;
    gap: $spacing-sm;
  }

  .neighborhood-card-title {
    font-size: $size-h3;
    font-weight: $font-weight-bold;
    color: $black;
    margin: 0;
  }

  .neighborhood-card-subtitle {
    font-size: $size-body;
    color: $calm-grey-600;
    margin: 0;
    line-height: 1.5;
  }

  .neighborhood-card-meta {
    display: flex;
    flex-wrap: wrap;
    gap: $spacing-sm;
    margin-top: $spacing-xs;
  }

  .neighborhood-card-meta-item {
    display: flex;
    align-items: center;
    gap: $spacing-xs;
    font-size: $size-body-small;
    color: $calm-grey-600;

    i {
      color: $primary;
    }
  }

  .neighborhood-card-badges {
    display: flex;
    flex-wrap: wrap;
    gap: $spacing-xs;
    margin-top: $spacing-xs;
  }
</style>
